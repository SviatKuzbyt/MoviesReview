<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_bottom_navigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:minHeight">0dp</item>
    </style>


    <style name="main_text">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="list_text_details">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?colorOnSecondary</item>
    </style>

    <style name="list_text_type">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="main_bold_text">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="recycle_description">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="detail_activity_status_bar" parent="Theme.MoviesReview">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>